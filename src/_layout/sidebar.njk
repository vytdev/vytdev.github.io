{% if not uiOpts.noSidebar %}
<div class="sidebar noprint" role="complementary" aria-label="Sidebar content"
     aria-hidden="true">

  <div class="theme-chooser">
    <label for="theme">Theme</label>
    <select id="theme" name="theme" aria-label="Choose theme">
      <option value="auto">Auto</option>
      <option value="light">Light</option>
      <option value="dark">Dark</option>
    </select>
  </div>


  <p><b>{{ pageInfo.title }}</b>.
    {{ pageInfo.about }}</p>


  <p class="article-dates">
     Published {{ pageInfo.published }} &bull;
     Updated {{ pageInfo.updated }}
  </p>


  <p>
  {% for tag in pageInfo.tags %}
  <span class="key-tag">{{ tag }}</span>
  {% endfor %}
  </p>


  {% if not uiOpts.noToc %}
  <h4>In this page</h4>
  {{ genToc() | safe }}
  {% endif %}


  <h4>Navigation</h4>
  {% if pageInfo.prevPage -%}
  <a href="{{ pageInfo.prevPage | url }}">Previous page</a>
  {%- endif %}
  {% if pageInfo.nextPage -%}
  <a href="{{ pageInfo.nextPage | url }}">Next page</a>
  {%- endif %}
  <a href="https://github.com/vytdev/vytdev.github.io/edit/master/src/{{
     pageInfo.srcPath }}" target="_blank">Edit this page</a>
  <a href="https://github.com/vytdev/vytdev.github.io/blob/master/src/{{
     pageInfo.srcPath }}" target="_blank">View source</a>
  {% if not uiOpts.noPrint -%}
  <a href="#" onclick="event.preventDefault(); window.print()"
     class="yescript" aria-label="Print this document">Print</a>
  {%- endif %}


  <h4>Contributors</h4>
  {% for name in pageInfo.authors %}
  <a class="author-name" href="https://github.com/{{ name }}"
       target="_blank" aria-label="Author {{ name }}">
  <img width="30px" height="30px" alt="avatar"
       src="https://avatars.githubusercontent.com/{{ name }}" />
  {{ name }}
  </a>
  {% endfor %}

  <p class="note">Created using <a href="{{ 'about.html'|url }}">VYT Hub</a>'s
      bespoke site generator.</p>

</div>
{% endif %}
